<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.TextInfoFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/tf_app_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tf_app_bar_height"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/tf_toolbar_layout"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:toolbarId="@+id/toolbar">

            <ImageView
                android:id="@+id/tf_toolbar_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/tf_toolbar_description"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_public_24"
                app:layout_collapseMode="parallax" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tf_nested_scroll"
        app:layout_behavior=".ui.behaviors.NestedBehavior">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/big_text" />

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/tf_button_up"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        app:cornerRadius="25dp"
        app:icon="@drawable/ic_baseline_arrow_upward_24"
        app:iconSize="50dp"
        app:layout_behavior=".ui.behaviors.ButtonUpBehavior"
        app:layout_anchor="@id/tf_app_bar"
        app:layout_anchorGravity="bottom|end" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/tf_button_down"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        app:cornerRadius="25dp"
        app:layout_behavior=".ui.behaviors.ButtonDownBehavior"
        app:icon="@drawable/ic_baseline_arrow_downward_24"
        app:iconSize="50dp"
        app:layout_anchor="@id/tf_app_bar"
        app:layout_anchorGravity="bottom|start" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>