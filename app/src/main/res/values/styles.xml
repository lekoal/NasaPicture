<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="chips_color" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/background_color_chip_state_list</item>
        <item name="rippleColor">?color_700</item>
        <item name="android:textColor">@color/text_color_chip_state_list</item>
        <item name="android:fontFamily">?font_family</item>
    </style>

    <style name="text_layout_color" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="startIconTint">?color_500</item>
        <item name="endIconTint">?color_500</item>
        <item name="android:textColorHint">?dark_color</item>
        <item name="android:textColor">?dark_color</item>
        <item name="boxStrokeColor">?dark_color</item>
        <item name="hintTextColor">?color_700</item>
        <item name="helperTextTextColor">?color_500</item>
    </style>

    <style name="bottom_app_bar_color" parent="@style/Widget.MaterialComponents.BottomAppBar">
        <item name="navigationIconTint">?color_200</item>
        <item name="colorControlNormal">?color_200</item>
        <item name="backgroundTint">?dark_color</item>
    </style>

    <style name="bottom_app_bar_base" parent="@style/Widget.MaterialComponents.BottomAppBar">
        <item name="navigationIconTint">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="backgroundTint">@color/bottom_app_bar_color</item>
    </style>

    <style name="fab_base" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/fab_color</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="fab_color" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">?dark_color</item>
        <item name="tint">?color_200</item>
    </style>

    <style name="bottom_navigation_color" parent="@style/Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">?dark_color</item>
        <item name="itemIconTint">?color_200</item>
        <item name="itemTextColor">?color_200</item>
    </style>
    
    <style name="tabs_color" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">?dark_color</item>
        <item name="tabIconTint">?color_200</item>
        <item name="tabTextColor">?color_200</item>
        <item name="tabIndicatorColor">?color_200</item>
        <item name="tabIndicatorHeight">4dp</item>
    </style>

</resources>